@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h3>Add a new Engineer</h3>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)<br>
  @Html.LabelFor(model => model.ContactInfo)
  @Html.TextBoxFor(model => model.ContactInfo)<br>
  @Html.LabelFor(model => model.AvailHours)
  @Html.TextBoxFor(model => model.AvailHours)<br>

  <input type="submit" value="Add new Engineer" />
}
<br>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>